<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#cacccb"
    android:orientation="vertical"
    tools:context=".ContactUs_Activity">

    <!--Add an ImageView: display college logo-->
    <ImageView
        android:id="@+id/ames_logo"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="#FFFFFFFF"
        android:contentDescription="college logo"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ames_logo" />

    <!--Add a TextView: Title-->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="CONTACT US"
        android:textColor="#1f3ccf"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!--Add a TextView: contact detail-->
    <TextView
        android:id="@+id/aboutAMESIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:padding="5dp"
        android:text="(1) Phone: 0800 263 748 (Local) or +64 (9)373 4958 (International);
\n(2) Visit us at: Level 11, 385 Queen Street, Auckland;
\n(3) Map location: "
        android:textColor="#1b37c6"
        android:textSize="17sp"
        android:textStyle="normal" />

    <!--Add a WebView: display college logo-->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_weight="1" />
</LinearLayout>
